.sign_in.partial
  .col-md-6.col-md-offset-3
    .well
      form(class="form form-horizontal" id="sign-in-form")
        .form-group
          label(class="control-label col-lg-2") Email
          .col-lg-10
            input(class="form-control" name="email" type="text" id="user_email")
        .form-group
          label(class="control-label col-lg-2") Password
          .col-lg-10
            input(class="form-control" name="password" type="password" id="user_password")
        .form-group
          .col-lg-10.col-lg-offset-2
            input(class="btn btn-primary" type="submit" value="Sign In")
      form(class="form form-horizontal" id="guest-sign-in-form")
        .col-lg-10
          input(class="btn btn-primary" type="submit" value="Login as Guest")
      .clearfix    